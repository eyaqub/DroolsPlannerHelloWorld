
<?xml version="1.0" encoding="UTF-8"?>
<solver>
	<environmentMode>DEBUG</environmentMode>

	<!-- Define the model -->
	<solutionClass>com.hill.planner.basic.AirportSolution</solutionClass>
	<planningEntityClass>com.hill.planner.basic.Plane</planningEntityClass>

	<!-- Define the score function -->
	<scoreDirectorFactory>
		<scoreDefinitionType>HARD_AND_SOFT</scoreDefinitionType>
		<scoreDrl>/com/hill/planner/basic/scoreRules.drl</scoreDrl>
	</scoreDirectorFactory>


	<constructionHeuristic>
		<constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
	</constructionHeuristic>

	<localSearch>
		<!-- Configure the optimization algorithm(s) -->
		<termination>
			<terminationCompositionStyle>OR</terminationCompositionStyle>
			<maximumUnimprovedStepCount>10</maximumUnimprovedStepCount>
			<maximumSecondsSpend>10</maximumSecondsSpend>
			<scoreAttained>0hard/0soft</scoreAttained>
		</termination>

		<changeMoveSelector>
			<!-- Set this to ORIGINAL for extra credit: work out why is it so slow. -->
			<selectionOrder>RANDOM</selectionOrder>
			
			<valueSelector>
				<valueFilterClass>com.hill.planner.basic.FutureTSATSwapMoveFilter</valueFilterClass>
			</valueSelector>
		</changeMoveSelector>

		<forager>
			<minimalAcceptedSelection>100</minimalAcceptedSelection>
		</forager>

	</localSearch>
</solver>